local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local existing = playerGui:FindFirstChild("BlackoutNotice")
if existing then existing:Destroy() end
-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BlackoutNotice"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui
screenGui.DisplayOrder = 9999
local blackFrame = Instance.new("Frame")
blackFrame.Name = "BlackFrame"
blackFrame.Size = UDim2.new(1,0,1,0)
blackFrame.Position = UDim2.new(0,0,0,0)
blackFrame.BackgroundColor3 = Color3.new(0,0,0)
blackFrame.BackgroundTransparency = 1
blackFrame.BorderSizePixel = 0
blackFrame.Parent = screenGui
blackFrame.ZIndex = 10
blackFrame.Active = true  -- helps block input behind it
local blocker = Instance.new("TextButton")
blocker.Name = "InputBlocker"
blocker.Size = UDim2.new(1,0,1,0)
blocker.Position = UDim2.new(0,0,0,0)
blocker.BackgroundTransparency = 1
blocker.Text = ""
blocker.AutoButtonColor = false
blocker.BorderSizePixel = 0
blocker.Parent = blackFrame
blocker.ZIndex = 11
local messageFrame = Instance.new("Frame")
messageFrame.Size = UDim2.new(0.8,0,0.25,0)
messageFrame.Position = UDim2.new(0.1,0,0.37,0)
messageFrame.BackgroundTransparency = 1
messageFrame.Parent = blackFrame
messageFrame.ZIndex = 12
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1,0,1,0)
label.Position = UDim2.new(0,0,0,0)
label.BackgroundTransparency = 1
label.Text = "Sorry this script no longer exists.\nGet it on the link in my bio."
label.TextWrapped = true
label.TextScaled = true
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.new(1,1,1)
label.TextYAlignment = Enum.TextYAlignment.Center
label.TextXAlignment = Enum.TextXAlignment.Center
label.Parent = messageFrame
label.ZIndex = 13
-- small sublabel (optional) to mimic "link in bio" hint
local sub = Instance.new("TextLabel")
sub.Size = UDim2.new(1,0,0.16,0)
sub.Position = UDim2.new(0,0,0.85,0)
sub.BackgroundTransparency = 1
sub.Text = "(check my bio on yt for the link)"
sub.TextWrapped = true
sub.TextScaled = true
sub.Font = Enum.Font.Gotham
sub.TextColor3 = Color3.fromRGB(200,200,200)
sub.Parent = messageFrame
sub.ZIndex = 13
-- Fade in
local tweenInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local fadeIn = TweenService:Create(blackFrame, tweenInfo, {BackgroundTransparency = 0})
fadeIn:Play()
-- Optional: pulse the label slightly for emphasis
spawn(function()
    while screenGui.Parent do
        local t1 = TweenService:Create(label, TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {TextTransparency = 0.15})
        local t2 = TweenService:Create(label, TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {TextTransparency = 0})
        t1:Play(); t1.Completed:Wait()
        t2:Play(); t2.Completed:Wait()
        wait(0.8)
    end
end)
-- Prevent typical exit keys from closing it unintentionally (optional safety)
blocker.MouseButton1Down:Connect(function() end)
blocker.MouseButton2Down:Connect(function() end)
-- If you want it to auto-remove after X seconds, uncomment the lines below and set seconds
